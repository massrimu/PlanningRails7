<p id="notice"><%= notice %></p>
<div class="container">
<div class="row project-heading">
<h1>Explore Greater Lansing Projects.</h1>
<p class="short-text">Find all of Lansing's future city developments and details listed below. Learn about improvement ideas, vote on them, and tell us what you think!</p>
</div>

 <br>
 <br>

<div class ="row">
  <div class="card-grid">
  <% @projects.each do |project| %>
  <div class = "card-link">
  <%= link_to project do %>
  <div class=" card-prev">
      <% if project.image.exists? %>
        <%=(image_tag project.image.url(:medium), class: 'img-responsive img-medium') %>
      <% end %>
    <div class="card-prev-text project-title">
      <h3><%= project.title %></h3>
      <% if can? :manage, @projects %>
             <%= link_to 'Edit', edit_project_path(project) %>
             <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>


    </div>
  </div>
  <% end %>
</div>
  <% end %>
  </div>
</div>


<br>
    <% if can? :manage, @projects %>
    <%= link_to 'New Project', new_project_path %>
  <% end %>

<br>
<br>
<%= link_to 'Back', root_path, class: "btn btn-primary" %>

</div>
