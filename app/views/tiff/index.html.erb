<p id="notice"><%= notice %></p>
<div class="container">
  <div class="rectangle"></div>


<style>
th, td {
  padding: 10px;
}
th {
  text-align: left;
}
.rectangle {
  height: 250px;
  width: 1100px;
  background-color: White;
  border: 2px Solid Black;
}
.rightpane {
  position: absolute;
  right: 70px;
  top:420px

  }
</style>
<br>
<br>
<br>
<h1>All investments</h1>

<% if !@tiffs.empty? %>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Author</th>
      <th>Body</th>
      <th>$ Value</th>
      <% if can? :manage, :all %>
      <th>Delete</th>
      <th>Update</th>
      <% end %>
    </tr>
  </thead>
  <tbody class="sortable">
  <% @tiffs.each_with_sortable_id do |tiff, sortable_id| %>
     <tr id="<%= sortable_id %>">
  <tr>
    <td>  <%= link_to like_tiff_path(tiff), method: :put do %>
        <div>
          <span><i class="fa fa-thumbs-up fa-1x"> </i> </span>

          <p><%= tiff.get_upvotes.size %> </p>
        </div>
     <% end %>
     </td>
    <td><%= tiff.title %></td>
    <td><%= tiff.author %></td>
    <td><%= tiff.body[0..20] %>...</td>
    <td><%= tiff.value %></td>


<td>
<% if can? :manage, :all %>
<%= link_to 'Delete', tiff, method: :delete, data: { confirm: 'Are you sure?' }%>
<% end %>
</td>

<td>
<% if can? :manage, :all %>
<%= link_to 'Update', edit_tiff_path(tiff)%>
<% end %>
</td>




  </tr>
  <% end %>
  </tbody>
</table>
<% else %>
  <p>No investment found.</p>
<% end %>

<br/>
