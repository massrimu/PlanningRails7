<style>
th, td {
  padding: 10px;
}
th {
  text-align: right;
}
</style>

<h1>Update Investment:</h1>

<%= form_tag(nil, method: "post") do %>

<table>
  <tbody>
    <tr>
      <th><%= label_tag(:title, "Title:") %></th>
      <td><%= text_field_tag(:title, @tiff.title, :required => true) %></td>
    </tr>
    <tr>
      <th><%= label_tag(:author, "Author:") %></th>
      <td><%= text_field_tag(:author, @tiff.author, :required => true) %></td>
    </tr>
    <tr>
      <th><%= label_tag(:author, "Investment Body:") %></th>
      <td><%= text_field_tag(:body, @tiff.body, :required => true) %></td>
    </tr>
    <tr>
      <th><%= label_tag(:value, "Value:") %></th>
      <td><%= text_field_tag(:value, @tiff.value, :required => true) %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= submit_tag("Update") %></td>
    </tr>
  </tbody>
</table>

<% end %>
